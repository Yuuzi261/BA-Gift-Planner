# /public/_headers

# ----------------------------------------------------------------
# Strategy 1: Cache static assets with hash values permanently
# ----------------------------------------------------------------
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# ----------------------------------------------------------------
# Strategy 2: Set long-term cache for images and icons that do not change frequently
# ----------------------------------------------------------------
/og_image.webp
  Cache-Control: public, max-age=604800
  CF-Cache-Level: cache_everything
/vite.svg
  Cache-Control: public, max-age=604800
  CF-Cache-Level: cache_everything
/favicon.webp
  Cache-Control: public, max-age=604800
  CF-Cache-Level: cache_everything

# ----------------------------------------------------------------
# Strategy 3: Ensure entry points and configuration files are always up-to-date
# ----------------------------------------------------------------
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  CF-Cache-Level: bypass
  Pragma: no-cache
  Expires: 0
/robots.txt
  Cache-Control: public, max-age=3600
  CF-Cache-Level: cache_everything